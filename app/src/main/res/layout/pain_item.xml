<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:orientation="vertical"
    android:layout_marginLeft="60dp"
    android:layout_marginTop="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#F5F5F5">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/painLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pain Level: " />
    <TextView
        android:id="@+id/painLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pain Location: "/>
    <TextView
        android:id="@+id/painMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood: "/>
    <TextView
        android:id="@+id/painSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps: "/>
    <TextView
        android:id="@+id/painDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "/>
    <TextView
        android:id="@+id/painTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: "/>
    <TextView
        android:id="@+id/painHumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity: "/>
    <TextView
        android:id="@+id/painPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure: "/>
    <TextView
        android:id="@+id/painEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email: "/>


</LinearLayout>

</com.google.android.material.card.MaterialCardView>